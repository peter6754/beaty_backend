{
    "name": "yiisoft/yii2-app-basic",
    "description": "Yii 2 Basic Project Template",
    "keywords": [
        "yii2",
        "framework",
        "basic",
        "project template"
    ],
    "homepage": "http://www.yiiframework.com/",
    "type": "project",
    "license": "BSD-3-Clause",
    "support": {
        "issues": "https://github.com/yiisoft/yii2/issues?state=open",
        "forum": "http://www.yiiframework.com/forum/",
        "wiki": "http://www.yiiframework.com/wiki/",
        "irc": "irc://irc.freenode.net/yii",
        "source": "https://github.com/yiisoft/yii2"
    },
    "minimum-stability": "stable",
    "require": {
        "php": "^8.0",
        "yiisoft/yii2": "~2.0.53",
        "yiisoft/yii2-bootstrap5": "~2.0.0",
        "yiisoft/yii2-symfonymailer": "^4.0",
        "kartik-v/yii2-widget-colorinput": "*",
        "kartik-v/yii2-widget-select2": "@dev",
        "rmrevin/yii2-fontawesome": "~3.5",
        "kartik-v/yii2-widget-datetimepicker": "*",
        "mihaildev/yii2-elfinder": "*",
        "kartik-v/yii2-widget-fileinput": "@dev",
        "mihaildev/yii2-ckeditor": "*",
        "kartik-v/yii2-widget-datepicker": "@dev",
        "kartik-v/yii2-widget-timepicker": "*",
        "robokassa/sdk-php": "dev-main",
        "mdmsoft/yii2-admin": "~2.0",
        "zircote/swagger-php": "^5.1",
        "vlucas/phpdotenv": "^5.6"
    },
    "require-dev": {
        "yiisoft/yii2-debug": "~2.1.27",
        "yiisoft/yii2-gii": "~2.2.7",
        "yiisoft/yii2-faker": "~2.0.0",
        "codeception/codeception": "^5.0",
        "codeception/verify": "~0.5.0 || ~1.1.0",
        "codeception/specify": "~0.4.6",
        "symfony/browser-kit": "^5.0 || ^6.0",
        "codeception/module-filesystem": "^3.0",
        "codeception/module-yii2": "^1.1.8",
        "codeception/module-asserts": "^3.0",
        "light/yii2-swagger": "~3.0"
    },
    "config": {
        "process-timeout": 1800,
        "fxp-asset": {
            "enabled": false
        },
        "allow-plugins": {
            "yiisoft/yii2-composer": true
        }
    },
    "scripts": {
        "post-install-cmd": [
            "php -r \"copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "php yii security/generate-key"
        ],
        "docs": "./vendor/bin/openapi modules/api/controllers -o web/docs/swagger.json --bootstrap docs-bootstrap.php"
    },
    "extra": {
        "yii\\composer\\Installer::postCreateProject": {
            "setPermission": [
                {
                    "runtime": "0777",
                    "web/assets": "0777",
                    "yii": "0755"
                }
            ]
        },
        "yii\\composer\\Installer::postInstall": {
            "generateCookieValidationKey": [
                "config/web.php"
            ]
        }
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ]
}